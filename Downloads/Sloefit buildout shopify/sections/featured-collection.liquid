{%- liquid
  assign products_to_display = section.settings.products_to_show | default: section.settings.collection.products_count
-%}

<div class="featured-collection color-{{ section.settings.color_scheme }} gradient">
  <div class="featured-collection__inner page-width">
    <div class="featured-collection__header">
      {%- if section.settings.title != blank -%}
        <h2 class="featured-collection__title">
          {{ section.settings.title | escape }}
        </h2>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p class="featured-collection__description">
          {{ section.settings.description | escape }}
        </p>
      {%- endif -%}
    </div>

    {%- if section.settings.collection != blank and section.settings.collection.products_count > 0 -%}
      <ul class="featured-collection__grid grid grid--1-col grid--3-col-desktop" role="list">
        {%- for product in section.settings.collection.products limit: products_to_display -%}
          <li class="grid__item">
            {% render 'product-card', product: product %}
          </li>
        {%- endfor -%}
      </ul>
    {%- else -%}
      <ul class="featured-collection__grid grid grid--1-col grid--3-col-desktop" role="list">
        {%- for i in (1..3) -%}
          <li class="grid__item">
            {% render 'product-card-placeholder' %}
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>
</div>

{% style %}
  .featured-collection {
    padding: 5rem 1rem;
  }
  @media screen and (min-width: 750px) {
    .featured-collection {
      padding: 6rem 1rem;
    }
  }
  .featured-collection__inner {
    max-width: 75rem;
    margin: 0 auto;
    background-color: var(--color-base-background-2);
    border-radius: 1rem;
    padding: 1.5rem;
  }
  @media screen and (min-width: 750px) {
    .featured-collection__inner {
      padding: 3rem;
    }
  }
  .featured-collection__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .featured-collection__title {
    font-size: 2.25rem;
    font-weight: 900;
    color: var(--color-base-text);
    text-transform: uppercase;
    margin: 0;
  }
  @media screen and (min-width: 750px) {
    .featured-collection__title {
      font-size: 3rem;
    }
  }
  .featured-collection__description {
    max-width: 32rem;
    margin: 1rem auto 0;
    font-size: 1.125rem;
    color: var(--color-base-text);
    opacity: 0.88;
  }
  .featured-collection__grid {
    gap: 1.5rem;
  }
  @media screen and (min-width: 750px) {
    .featured-collection__grid {
      gap: 2rem;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "THE FOUNDATION.",
      "label": "Heading",
      "info": "Title for the featured collection section"
    },
    {
      "type": "textarea",
      "id": "description",
      "default": "Start your journey with our core essentials. Transparently sourced, no guesswork involved.",
      "label": "Description",
      "info": "Short description text below the heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Select the collection to display products from (e.g., 'The Starter Stack')"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 3,
      "label": "Products to Show",
      "info": "Number of products to display"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color Scheme"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}

