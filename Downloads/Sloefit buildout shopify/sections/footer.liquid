<footer class="footer color-{{ section.settings.color_scheme }} gradient">
  <div class="footer__inner page-width">
    <div class="footer__grid grid grid--1-col grid--4-col-desktop">
      {%- for block in section.blocks -%}
        <div class="footer__column" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'link_list' -%}
              {%- if block.settings.heading != blank -%}
                <h4 class="footer__heading">{{ block.settings.heading | escape }}</h4>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="footer__list list-unstyled" role="list">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="footer__link link link--text list-menu__item focus-inset">
                        {{ link.title | escape }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            {%- when 'text' -%}
              {%- if block.settings.heading != blank -%}
                <h4 class="footer__heading">{{ block.settings.heading | escape }}</h4>
              {%- endif -%}
              {%- if block.settings.subtext != blank -%}
                <div class="footer__text">{{ block.settings.subtext }}</div>
              {%- endif -%}
              {%- if block.settings.show_social_icons -%}
                <ul class="footer__social list-social list-unstyled" role="list">
                  {%- if settings.social_instagram_link != blank -%}
                    <li>
                      <a class="list-social__link link" href="{{ settings.social_instagram_link | escape }}">
                        {%- render 'icon-instagram' -%}
                        <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_tiktok_link != blank -%}
                    <li>
                      <a class="list-social__link link" href="{{ settings.social_tiktok_link | escape }}">
                        {%- render 'icon-tiktok' -%}
                        <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                </ul>
              {%- endif -%}
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
    <div class="footer__copyright">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'sections.footer.copyright' | t }}</p>
    </div>
  </div>
</footer>

{% style %}
  .footer {
    background-color: var(--color-base-background-2);
    color: var(--color-base-text);
    padding: 4rem 1rem;
  }
  @media screen and (min-width: 750px) {
    .footer {
      padding: 5rem 1rem;
    }
  }
  .footer__inner {
    max-width: 75rem;
    margin: 0 auto;
  }
  .footer__grid {
    gap: 3rem;
    margin-bottom: 3rem;
  }
  .footer__heading {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-base-text);
    margin: 0 0 1rem;
    font-size: 0.875rem;
  }
  .footer__text {
    font-size: 0.875rem;
    color: var(--color-base-text);
    opacity: 0.88;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  .footer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .footer__list li {
    margin-bottom: 0.75rem;
  }
  .footer__link {
    color: var(--color-base-text);
    opacity: 0.88;
    text-decoration: none;
    transition: color 0.2s;
    font-size: 0.875rem;
  }
  .footer__link:hover {
    color: var(--color-primary);
  }
  .footer__social {
    display: flex;
    gap: 1.25rem;
    list-style: none;
    padding: 0;
    margin-top: 1.5rem;
  }
  .list-social__link {
    color: var(--color-base-text);
    opacity: 0.88;
    transition: color 0.2s;
  }
  .list-social__link:hover {
    color: var(--color-primary);
  }
  .footer__copyright {
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-base-text);
    opacity: 0.6;
  }
{% endstyle %}

