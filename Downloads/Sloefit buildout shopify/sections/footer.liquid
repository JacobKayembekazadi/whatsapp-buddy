          "label": "Text",
          "info": "Description or mission statement"
        },
        {
          "type": "checkbox",
          "id": "show_social_icons",
          "default": true,
          "label": "Show Social Icons",
          "info": "Display Instagram and TikTok icons"
        }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Shop",
          "label": "Heading",
          "info": "Column title (e.g., 'Shop', 'Company', 'Support')"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu",
          "info": "Select a menu to display in this column"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "text",
          "settings": {
            "heading": "Sloe Fit",
            "subtext": "<p>Your all-in-one partner for achieving sustainable fitness.</p>",
            "show_social_icons": true
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Shop",
            "menu": "footer"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Company",
            "menu": "footer"
          }
        },
        {
          "type": "link_list",
          "settings": {
            "heading": "Support",
            "menu": "footer"
          }
        }
      ]
    }
  ]
}
{% endschema %}

