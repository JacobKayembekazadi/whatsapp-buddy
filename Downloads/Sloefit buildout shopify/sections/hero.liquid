<div class="hero color-{{ section.settings.color_scheme }} gradient">
  <div class="hero__inner page-width">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero__heading">
        {{ section.settings.heading | escape }}
      </h1>
    {%- endif -%}
    {%- if section.settings.text != blank -%}
      <p class="hero__text">
        {{ section.settings.text | escape }}
      </p>
    {%- endif -%}
    {%- if section.settings.button_label_1 != blank or section.settings.button_label_2 != blank -%}
      <div class="hero__buttons">
        {%- if section.settings.button_label_1 != blank -%}
          <a href="{{ section.settings.button_link_1 }}" class="button button--primary">
            {{ section.settings.button_label_1 | escape }}
          </a>
        {%- endif -%}
        {%- if section.settings.button_label_2 != blank -%}
          <a href="{{ section.settings.button_link_2 }}" class="button button--secondary">
            {{ section.settings.button_label_2 | escape }}
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% style %}
  .hero {
    position: relative;
    padding: 6rem 1rem;
    overflow: hidden;
  }
  .hero::before {
    content: '';
    position: absolute;
    top: -25%;
    left: 25%;
    width: 24rem;
    height: 24rem;
    background-color: var(--color-primary);
    opacity: 0.1;
    border-radius: 50%;
    filter: blur(80px);
    z-index: -1;
  }
  @media screen and (min-width: 750px) {
    .hero {
      padding: 9rem 1rem;
    }
  }
  .hero__inner {
    max-width: 75rem;
    margin: 0 auto;
    text-align: center;
  }
  .hero__heading {
    font-size: 3rem;
    font-weight: 900;
    color: var(--color-base-text);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin: 0;
  }
  @media screen and (min-width: 750px) {
    .hero__heading {
      font-size: 4.375rem;
    }
  }
  .hero__text {
    max-width: 36rem;
    margin: 1.5rem auto 0;
    font-size: 1.125rem;
    color: var(--color-base-text);
    opacity: 0.88;
  }
  @media screen and (min-width: 750px) {
    .hero__text {
      font-size: 1.25rem;
      margin-top: 1.5rem;
    }
  }
  .hero__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2.5rem;
    justify-content: center;
  }
  @media screen and (min-width: 640px) {
    .hero__buttons {
      flex-direction: row;
    }
  }
  .button {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 700;
    font-size: 1.125rem;
    text-decoration: none;
    transition: all 0.2s;
  }
  .button--primary {
    background-color: var(--color-primary);
    color: var(--color-base-solid-button-labels);
  }
  .button--primary:hover {
    filter: brightness(1.1);
  }
  .button--secondary {
    background-color: transparent;
    border: 1px solid var(--color-base-text);
    color: var(--color-base-text);
  }
  .button--secondary:hover {
    background-color: var(--color-base-text);
    color: var(--color-base-background-1);
  }
{% endstyle %}

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Your Complete Fitness Ecosystem.",
      "label": "Heading",
      "info": "Main headline for the hero section"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "Premium, trusted supplements and a personal AI coach. Stop guessing, start achieving.",
      "label": "Text",
      "info": "Subheadline or description text"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "default": "Shop The Starter Stack",
      "label": "Primary Button Label",
      "info": "Text for the main call-to-action button"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Primary Button Link",
      "info": "Where the primary button should link to (e.g., /collections/starter-stack)"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "Meet The AI Coach",
      "label": "Secondary Button Label",
      "info": "Text for the secondary button (optional)"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Secondary Button Link",
      "info": "Where the secondary button should link to (e.g., /pages/ai-coach)"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color Scheme"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

